  "license": "ISC",
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.40.0",
    "allure-commandline": "^2.23.1",
    "cypress": "^12.11.0",
    "start-server-and-test": "^2.0.0"
  }
}
