{
  "name": "cypresstest",
  "version": "1.0.0",
  "description": "Automation Testing",
  "main": "index.js",
  "scripts": {
    "install": "npx cypress install",
    "test": "npx cypress run --env allure=true",
    "start-server-and-test": "npx start-server-and-test start-server http://localhost:8080 test",
    "report": "npx allure generate allure-results --clean -o allure-report"
  },
